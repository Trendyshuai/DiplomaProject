@using MyMovie.Core.Entities;
@{
    MovieEntity movie = ViewBag.Movie;
    List<CommentEntity> list = ViewBag.Comments;
}
@{
    ViewBag.Title = movie.Name + "- 短评";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--短评-->
<div class="col-sm-10" style="margin-top:10px">
    <h2>@movie.Name 短评</h2>
    <hr />
    @{
        if (list.Count > 0)
        {
            foreach (CommentEntity comment in list)
            {
                <div>
                    <p><span class="tag">@comment.NickName</span>  · @comment.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    <p>@comment.Conetnt</p>
                    <hr />
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning">
                <p class="text-center">暂无短评！</p>
            </div>
        }
    }
</div>